[Unit]
Description=Check and create /var/mnt/muralidharan/Files directory for disk mount paths

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'if [ ! -d /var/mnt/muralidharan/Files ]; then mkdir -p /var/mnt/muralidharan/Files && chown 1000:1000 /var/mnt/muralidharan/Files; fi'
RemainAfterExit=no

[Install]
WantedBy=multi-user.target
